<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Ajouter un nouveux voyage</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row">
                <div class="col-3">
                    {{ form_row(form.name) }}

                </div>
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.pointFort) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.ville) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.pays) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.saison) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.activity) }}
                </div>

                <div class="col-6 mb-5">
                    <h4>ajouter un noveux programme</h4>
                    <ul class="programme" data-prototype="{{ form_row(form.programme.vars.prototype)|e('html_attr') }}"></ul>
                    <button type="button" class=" btn btn-info add_item_link" data-collection-holder-class="programme">Add a programme</button>
                </div>

            </div>
            <div class="card-footer">
                {{ form_row(form.submit) }}
            </div>
          {{ form_end(form) }}


        </div>

     